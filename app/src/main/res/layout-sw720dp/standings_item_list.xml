<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/standings_item_points"
        android:layout_width="70sp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="4dp"
        android:gravity="fill_vertical|end"
        android:textAppearance="@style/TextAppearance.Medium" />

    <ImageView
        android:id="@+id/standings_item_color"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@+id/standings_item_points"
        app:srcCompat="@drawable/team_icon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/standings_item_name"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/standings_item_color"
        android:gravity="center_vertical|start"
        android:textAppearance="@style/TextAppearance.Medium" />
</RelativeLayout>