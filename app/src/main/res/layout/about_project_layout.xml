<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/project_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:width="0dp"
            android:gravity="start"
            android:text="@string/about_project_title"
            android:textAppearance="@style/TextAppearance.Large" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/project_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@android:drawable/ic_menu_my_calendar"
            android:gravity="center_vertical"
            android:text="@string/about_project_author"
            android:textAppearance="@style/TextAppearance.Small"/>

        <TextView
            android:id="@+id/project_author_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@android:drawable/ic_menu_send"
            android:gravity="center_vertical"
            android:text="@string/about_project_author_email"
            android:textAppearance="@style/TextAppearance.Small"/>

        <TextView
            android:id="@+id/project_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@android:drawable/ic_menu_view"
            android:gravity="center_vertical"
            android:text="@string/about_project_source"
            android:textAppearance="@style/TextAppearance.Small"/>
    </LinearLayout>

</LinearLayout>