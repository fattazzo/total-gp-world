<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/standings_item_points"
        android:layout_width="20sp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="4dp"
        android:gravity="fill_vertical|end"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/standings_item_color"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@+id/standings_item_points"
        app:srcCompat="@drawable/team_icon" />

    <TextView
        android:id="@+id/standings_item_name"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/standings_item_color"
        android:gravity="center_vertical|start"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp" />
</RelativeLayout>